{% extends "base.html.jinja2" %}
{% block content %}
    <div class="row">
        <div class="col-sm-10">
            <h1>Notifikácie o voľných miestach</h1>
            <p class="lead">
                Chcem dostávať notifikácie na email o voľných miestach na očkovanie vo vybraných očkovacích miestach.
            </p>
        </div>
    </div>
    <div class="row mt-2 mb-5">
        <div class="col-sm-10">
            <div class="card bg-light">
                <div class="card-body">
                    <form action="{{ url_for('main.spot_subscribe') }}" method="post">
                        {{ form.csrf_token }}

                        <h4>Email</h4>
                        {{ form.email() }}
                        <h4>Mestá</h4>
                        {{ form.places() }}
                        <input type="submit" class="btn btn-primary" value="Odoslať"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
            <h2><i class="fas fa-map-marker fa-fw"></i> Momentálne otvorené očkovacie miesta</h2>
            <ul>
                {% for place in places %}
                    {% if place.online %}
                    <li>{{ place.title }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}