                        .attr("fill", "none")
                        .attr("stroke", "#0d6efd")
                        .attr("stroke-width", 1.5)
                        .attr("stroke-linejoin", "round")
                        .attr("stroke-linecap", "round")
                        .attr("d", lineOnline)

                    svg.append("g")
                        .call(xAxis);

                    svg.append("g")
                        .call(yAxis);

                    d3.select("#stats").append(() => svg.node());
                }

                placeStats();
            </script>
        {% endif %}
