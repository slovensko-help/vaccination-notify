{% macro render_alerts(alerts) %}
    {% for alert in alerts %}
        <div class="alert alert-{{ alert['class'] }}">
            <i class="fas fa-{{ alert['icon'] }}"></i> {{ alert['text'] }}
        </div>
    {% endfor %}
{% endmacro %}

{% macro render_bad_browser(bad_browser) %}
    {% if bad_browser %}
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> {{ bad_browser }}
        </div>
    {% endif %}
{% endmacro %}

